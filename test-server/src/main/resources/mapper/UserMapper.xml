<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testbt.mapper.UserMapper">

    <resultMap type="user" id="DTO" autoMapping="true">
<!--        <id property="shopId" column="shop_id"/>-->
<!--        <result property="extInfo" column="ext_info" typeHandler="Json2ShopExtInfo"/>-->
    </resultMap>

    <select id="getUser" resultMap="DTO">
        <include refid="base"/>
        where id = #{_parameter}
    </select>


    <select id="listBy" resultMap="DTO">
        <include refid="base"/>
<!--        where 1-->
<!--        <if test="statuses != null">and  status in-->
<!--            <foreach item="it" collection="statuses" open="(" separator="," close=")">-->
<!--                #{it}-->
<!--            </foreach>-->
<!--        </if>-->
<!--        order by gmt_modified desc -->
        limit #{offset},#{limit}
    </select>

    <insert id="save">
        insert into  users ( id, name) values (#{id}, #{name})
    </insert>

    <delete id="remove">
        delete from   users where id = #{_parameter}
    </delete>


    <sql id="field">
        select id, name
    </sql>
    <sql id="base">
        <include refid="field"/>
        from users
    </sql>

</mapper>